<h1>Product Details</h1>
<table>
  <tr>
    <td>Name</td><td><%= @product.name %></td>
  </tr>
  <tr>
    <td>Description</td><td><%= @product.description %></td>
  </tr>
  <tr>
    <td>Price</td><td><%= @product.pricing %></td>
  </tr>
  <tr>
    <td>Category</td><td><%= @category_name %></td>
  </tr>

</table>

<h2>Comment</h2>
<form action='/products/<%= @product.id %>/comment' method='post'>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <label><input type='text' name='comment'/></label>
  <input type='submit' value='Add comment' />
</form>

<% comments = Product.find(@product.id).comments.all %>
<% comments.each do |comment| %>
<p><%=  "#{comment.comment} - #{comment.created_at}" %></p>
<% end %>

<p><a href="/products/<%= @product.id %>/edit">Edit</a>  |  <a href="/">Back</a></p>
