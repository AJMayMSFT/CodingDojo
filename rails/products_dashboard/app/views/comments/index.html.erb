<h1>All Comments</h1>

<table>
  <tr>
    <th>Comment</th>
    <th>Product</th>
  </tr>
    <% @comments.each do |comment| %>
  <tr>

    <td><%= comment.comment %></td>
    <td><%= Product.find(comment.product_id).name %></td>

  </tr>
  <% end %>
</table>

<a href="/products/"><button>Back</button></a>
