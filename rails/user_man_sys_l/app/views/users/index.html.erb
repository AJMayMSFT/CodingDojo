<h1>Registered Users</h1>
<p>The following users are in the system:</p>
<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
  </tr>
    <% @users.each do |user| %>
  <tr>

    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email_address %></td>
    <td><a href="/users/<%= user.id %>/">Show</a>  |  <a href="">Edit</a>  |  <a href="">Destroy</a></td>
  </tr>
  <% end %>
</table>

<a href="/users/new"><button>Add a user</button></a>
