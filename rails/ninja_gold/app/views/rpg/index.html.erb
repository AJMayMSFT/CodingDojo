<h1>Ninja Gold Game</h1>
<form class="gold_finder" action="/rpg/reset" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="submit" value="Reset">
</form>
<button><a href="/rpg/reset"> Reset also</a></button>

<h3>Your Gold: <%=session[:gold]%></h3> <!--Variable for gold total -->

<div>
    <div class="place_container">
        <h2>Farm</h2>
        <p>(earns 10-20 golds)</p>
        <form class="gold_finder" action="/rpg/process" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="hidden" name="place" value="farm">
            <input type="submit" value="Find Gold!!!">
        </form>
    </div>

    <div class="place_container">
        <h2>Cave</h2>
        <p>(earns 5-10 golds)</p>
        <form class="gold_finder" action="/rpg/process" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="hidden" name="place" value="cave">
            <input type="submit" value="Find Gold!!!">
        </form>
    </div>

    <div class="place_container">
        <h2>House</h2>
        <p>(earns 2-5 golds)</p>
        <form class="gold_finder" action="/rpg/process" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="hidden" name="place" value="house">
            <input type="submit" value="Find Gold!!!">
        </form>
    </div>

    <div class="place_container">
        <h2>Casino</h2>
        <p>(earns/takes 0-50 golds)</p>
        <form class="gold_finder" action="/rpg/process" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="hidden" name="place" value="casino">
            <input type="submit" value="Find Gold!!!">
        </form>
    </div>
</div>

<div>
    <p>Activities: </p>
    <div class="act_log">
      <% session[:activity_log].each do |log|%>
    <p><%=log%></p>
    <%end%>
  </div>
</div>
